{
  "extends": ["airbnb-base"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["__tests__/*.js"],
  "rules": {
    "no-console": "off",
    "linebreak-style": 0,
    "max-lines-per-function": ["error", 10],
    "max-depth": ["error", 2]
  }
}